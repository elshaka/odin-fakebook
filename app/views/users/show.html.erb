<div class="row">
  <div class="profile col-md-3">
    <%= render @user %>
  </div>
  <div class="posts col-md-9">
    <% if @user.posts.any? %>
      <% @user.posts.each do |post| %>
        <%= render post %>
      <% end %>
    <% else %>
    <p>This user hasn't posted anything yet.</p>
    <% end %>
  </div>
</div>
