<div id="post-<%= post.id %>" class="post-container card">
  <div class="card-body">
    <div class="d-flex">
      <div class="mr-4">
        <%= image_tag post.user.profile_image_url + '?s=64', alt: post.user.name %>
      </div>
      <div class="flex-fill">
        <h5 class="card-title"><%= link_to post.user.name, user_path(post.user) %></h5>
        <p class="card-subtitle mb-2 text-muted font-italic"><%= link_to time_ago_in_words(post.created_at) + ' ago', post %></p>
        <p class="card-text"><%= post.content %></p>
        <span class="likes-link">
          <%= render 'posts/post_likes_link', post: post %>
        </span>
        <span class="comments-link">
          <%= render 'posts/post_comments_link', post: post %>
        </span>
      </div>
    </div>
  </div>
</div>
