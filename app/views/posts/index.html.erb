<div  class="profile">
  <div class="profile-image">
  <%= image_tag current_user.profile_image_url %>
  </div>
  </div class="profile-tag">
    Hello, <%= current_user.name %>.
  </div>
</div>

<%= render 'posts/form', post: @post %>

<div class="timeline">
  <p>Welcome to your timeline.</p>

  <ol>
    <% @posts.each do |post| %>
      <li>
        <%= render post %>
      </li>
    <% end %>
  </ol>
</div>
